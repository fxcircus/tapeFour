# Debug configuration for development
# Copy this file to .env.local and uncomment the options you want to enable

# Global debug toggle (defaults to true in development)
# VITE_DEBUG_ENABLED=true

# Individual debug categories (all default to false unless specified)
# VITE_DEBUG_TRANSPORT=true     # Transport controls (play, stop, record)
# VITE_DEBUG_INPUT=true         # Input monitoring, microphone access
# VITE_DEBUG_WAVEFORM=true      # Waveform rendering (very noisy)
# VITE_DEBUG_METER=true         # Volume meter updates (very noisy)
# VITE_DEBUG_PUNCHIN=true       # Punch-in recording
# VITE_DEBUG_HALFSPEED=true     # Half-speed effect
# VITE_DEBUG_UI=true            # UI interactions
# VITE_DEBUG_AUDIO=true         # Audio routing
# VITE_DEBUG_BOUNCE=true        # Track bouncing
# VITE_DEBUG_SCRUB=true         # Playhead scrubbing
# VITE_DEBUG_GENERAL=true       # General application logs (defaults to true)
# VITE_DEBUG_DURATION=true      # Duration calculations
# VITE_DEBUG_PROCESSING=true    # Audio processing
# VITE_DEBUG_KEYBOARD=true      # Keyboard shortcuts
# VITE_DEBUG_SETTINGS=true      # Settings changes